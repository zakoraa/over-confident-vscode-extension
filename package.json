{
  "name": "overconfident",
  "displayName": "Over Confident",
  "description": "Over Confident protects you from committing sensitive files like .env before your confidence becomes a security incident.",
  "version": "0.0.1",
  "publisher": "zakoraa",
  "license": "MIT",
  "icon": "assets/images/overlogic-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/zakoraa/over-confident-vscode-extension.git"
  },
  "homepage": "https://github.com/zakoraa/over-confident-vscode-extension",
  "bugs": {
    "url": "https://github.com/zakoraa/over-confident-vscode-extension/issues"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "overConfident.scanWorkspace",
        "title": "OverConfident: Scan Workspace"
      }
    ],
    "configuration": {
      "title": "OverConfident",
      "properties": {
        "overConfident.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OverConfident protection"
        },
        "overConfident.protectedFiles": {
          "type": "array",
          "default": [
            ".env",
            ".env.local",
            ".env.production",
            ".env.development"
          ],
          "items": {
            "type": "string"
          },
          "description": "Files that should never be committed"
        },
        "overConfident.autoAddToGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add protected files to .gitignore"
        },
        "overConfident.enablePreCommitHook": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create a Git pre-commit hook to block protected files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
